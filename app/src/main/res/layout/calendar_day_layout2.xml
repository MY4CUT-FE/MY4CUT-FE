<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/calendarDayText"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="22" />

    <View
        android:id="@+id/viewDataDot"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_dot"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/calendarDayText"
        app:layout_constraintStart_toStartOf="@id/calendarDayText"
        app:layout_constraintTop_toBottomOf="@id/calendarDayText"/>

</androidx.constraintlayout.widget.ConstraintLayout>