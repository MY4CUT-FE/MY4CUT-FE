<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_albums"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2" />

    <ImageView
        android:id="@+id/btn_create_album"
        android:layout_width="29dp"
        android:layout_height="26dp"
        android:layout_marginBottom="3dp"
        android:src="@drawable/ic_album_add"
        app:layout_constraintBottom_toTopOf="@id/tv_create_album"
        app:layout_constraintStart_toStartOf="@id/tv_create_album"
        app:layout_constraintEnd_toEndOf="@id/tv_create_album" />

    <TextView
        android:id="@+id/tv_create_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="앨범 생성"
        android:textSize="8sp"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>