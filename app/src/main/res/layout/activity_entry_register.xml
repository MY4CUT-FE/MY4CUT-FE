<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="9dp"
        android:layout_height="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="네컷 업로드"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/line_top"
        app:layout_constraintBottom_toTopOf="@id/btn_complete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="100dp">

            <TextView
                android:id="@+id/tv_date_capsule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2026.01.08"
                android:background="@drawable/bg_date_capsule"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textSize="12sp"
                android:textColor="#4D4D4D"
                android:fontFamily="@font/suit_medium"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <FrameLayout
                android:id="@+id/fl_photo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_date_capsule">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_photo_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_photo_container_border"
                    android:padding="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:background="@drawable/bg_dotted_border"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:id="@+id/iv_upload_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_upload_placeholder_icon"
                            app:layout_constraintBottom_toTopOf="@id/tv_upload_guide"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <TextView
                            android:id="@+id/tv_upload_guide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/suit_bold"
                            android:gravity="center"
                            android:text="오늘의 네컷을\n업로드 해주세요"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_upload_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/suit_medium"
                            android:gravity="center"
                            android:text="하루 최대 3장의 네컷을 등록하고\n일기는 1개만 작성할 수 있어요."
                            android:textColor="#888888"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_upload_guide" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_photo_slider"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:visibility="gone"
                    android:paddingHorizontal="40dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    tools:visibility="visible" />

            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_diary_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:paddingVertical="16dp"
                android:background="@drawable/bg_white_rounded_12dp"
                android:elevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/fl_photo_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tv_diary_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하루 일기"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/suit_bold"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iv_diary_arrow"
                    android:layout_width="14dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_arrow_down_gray"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_diary_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:padding="16dp"
                android:background="@drawable/bg_white_rounded_12dp"
                android:elevation="2dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/cl_diary_header"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:id="@+id/et_diary"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_diary_input"
                    android:hint="오늘의 네컷을 기록해보세요."
                    android:inputType="textMultiLine"
                    android:textSize="14sp"
                    android:textColor="#1A1A1A"
                    android:padding="16dp"
                    android:gravity="top|start"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/100"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/et_diary"
                    app:layout_constraintEnd_toEndOf="@id/et_diary"/>

                <LinearLayout
                    android:id="@+id/ll_mood_container"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_dashed_mood_speech"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:layout_constraintStart_toEndOf="@id/iv_mood"
                    app:layout_constraintTop_toBottomOf="@id/et_diary">

                    <ImageView
                        android:id="@+id/iv_mood_1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/img_mood_happy" />

                    <ImageView
                        android:id="@+id/iv_mood_2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/img_mood_lovely" />

                    <ImageView
                        android:id="@+id/iv_mood_3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/img_mood_exciting" />

                    <ImageView
                        android:id="@+id/iv_mood_4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/img_mood_angry" />

                    <ImageView
                        android:id="@+id/iv_mood_5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/img_mood_sad" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_mood"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_mood_icon_small"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/et_diary"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_white_rounded_12dp"
        android:backgroundTint="#FE927F"
        android:text="확인"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/suit_bold"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>