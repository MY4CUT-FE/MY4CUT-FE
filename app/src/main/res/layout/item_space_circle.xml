<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="160dp"
    app:layout_constraintDimensionRatio="1:1">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_space_circle"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 만료 프로그레스 -->
    <ProgressBar
        android:id="@+id/progressExpire"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="6dp"
        android:max="100"
        android:progress="60"
        android:indeterminate="false"
        android:progressDrawable="@drawable/progress_space_expire"
        android:rotation="-90"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 내부 흰 원 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutCenterContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 스페이스 이름 -->
            <TextView
                android:id="@+id/tvSpaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스페이스 1"
                android:textColor="#1A1A1A"
                android:textSize="14sp"
                android:fontFamily="@font/suit_bold" />

            <!-- 멤버 수 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_profile_space"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tvMemberCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5/10"
                    android:textColor="#FE927F"
                    android:textSize="12sp"
                    android:fontFamily="@font/suit_medium" />
            </LinearLayout>

        </LinearLayout>

        <!-- 만료 텍스트 -->
        <TextView
            android:id="@+id/tvExpire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="만료까지 2일"
            android:textColor="#8F8F8F"
            android:textSize="10sp"
            android:fontFamily="@font/suit_medium"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/layoutCenterContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>