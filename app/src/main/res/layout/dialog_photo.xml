<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/bg_dialog_white_2">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/ic_member"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivClose"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아몬드"
        android:textColor="#1A1A1A"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/ivProfile"
        app:layout_constraintStart_toEndOf="@id/ivProfile" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025/11/04 16:21"
        android:textSize="8sp"
        android:textColor="#1A1A1A"
        app:layout_constraintBottom_toBottomOf="@id/ivProfile"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="@id/tvUserName" />

    <ImageView
        android:id="@+id/ivSave"
        android:layout_width="10dp"
        android:layout_height="9dp"
        android:adjustViewBounds="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_save"
        app:layout_constraintEnd_toStartOf="@id/ivClose"
        app:layout_constraintBottom_toBottomOf="@id/tvDate"/>

    <ImageView
        android:id="@+id/ivMainPhoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/image1"
        app:layout_constraintEnd_toEndOf="@id/ivSave"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/ivProfile"
        app:layout_constraintTop_toBottomOf="@id/ivProfile" />

    <View
        android:id="@+id/divLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#8F8F8F"
        app:layout_constraintTop_toBottomOf="@id/ivMainPhoto"
        app:layout_constraintStart_toStartOf="@id/ivMainPhoto"
        app:layout_constraintEnd_toEndOf="@id/ivMainPhoto"/>

    <ImageView
        android:id="@+id/ivChat"
        android:layout_width="12dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_comment"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/ivMainPhoto"
        app:layout_constraintStart_toStartOf="@id/ivMainPhoto" />

    <TextView
        android:id="@+id/tvChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글 0"
        android:textSize="10dp"
        android:textColor="#19191B"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/ivChat"
        app:layout_constraintBottom_toBottomOf="@id/ivChat"
        app:layout_constraintStart_toEndOf="@id/ivChat"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="9dp"
        android:src="@drawable/ic_down"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintTop_toBottomOf="@id/ivMainPhoto"
        app:layout_constraintEnd_toEndOf="@id/ivMainPhoto" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChatList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/ivChat"
        app:layout_constraintBottom_toTopOf="@id/text"
        app:layout_constraintStart_toStartOf="@id/ivMainPhoto"
        app:layout_constraintEnd_toEndOf="@id/ivMainPhoto"
        tools:itemCount="2"
        tools:listitem="@layout/item_comment" />

    <EditText
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:hint="댓글 입력하기"
        android:background="@drawable/shape_edittext_background"
        android:padding="8dp"
        android:textSize="7sp"
        android:textColor="#B1B1B1"
        app:layout_constraintTop_toBottomOf="@id/rvChatList"
        app:layout_constraintStart_toStartOf="@id/ivMainPhoto"
        app:layout_constraintEnd_toStartOf="@id/ivSend"/>

    <ImageView
        android:id="@+id/ivSend"
        android:layout_width="12dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_send"
        app:layout_constraintEnd_toEndOf="@id/ivMainPhoto"
        app:layout_constraintTop_toTopOf="@id/text"
        app:layout_constraintBottom_toBottomOf="@id/text"/>

    <TextView
        android:id="@+id/mainText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="확인"
        android:background="@drawable/bg_label_pink"
        android:padding="15dp"
        android:textSize="12sp"
        android:textColor="#FE927F"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>