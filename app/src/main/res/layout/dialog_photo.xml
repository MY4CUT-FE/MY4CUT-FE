<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/bg_dialog_white_2">

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:maxHeight="400dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ivClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_profile_cat"
                style="@style/CircleImage"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/suit_regular"
                android:text="아몬드"
                android:textColor="#1A1A1A"
                app:layout_constraintStart_toEndOf="@id/ivProfile"
                app:layout_constraintTop_toTopOf="@id/ivProfile" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suit_regular"
                android:text="2025/11/04 16:21"
                android:textColor="#1A1A1A"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@id/ivProfile"
                app:layout_constraintStart_toStartOf="@id/tvUserName"
                app:layout_constraintTop_toBottomOf="@id/tvUserName" />

            <ImageView
                android:id="@+id/ivSave"
                android:layout_width="10dp"
                android:layout_height="9dp"
                android:adjustViewBounds="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_save"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tvDate"/>

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_trash"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@id/ivSave"
                app:layout_constraintBottom_toBottomOf="@id/tvDate" />

            <ImageView
                android:id="@+id/ivMainPhoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/image1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/ivProfile"
                app:layout_constraintTop_toBottomOf="@id/ivProfile" />

            <View
                android:id="@+id/divLine"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#8F8F8F"
                app:layout_constraintTop_toBottomOf="@id/ivMainPhoto"
                app:layout_constraintStart_toStartOf="@id/ivMainPhoto"
                app:layout_constraintEnd_toEndOf="@id/ivMainPhoto"/>

            <ImageView
                android:id="@+id/ivChat"
                android:layout_width="12dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_comment"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/divLine"
                app:layout_constraintStart_toStartOf="@id/ivMainPhoto" />

            <TextView
                android:id="@+id/tvChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/suit_medium"
                android:text="댓글 0"
                android:textColor="#19191B"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="@id/ivChat"
                app:layout_constraintStart_toEndOf="@id/ivChat"
                app:layout_constraintTop_toTopOf="@id/ivChat" />

            <ImageView
                android:id="@+id/ivToggleComment"
                android:layout_width="10dp"
                android:layout_height="9dp"
                android:src="@drawable/ic_down"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="3dp"
                app:layout_constraintTop_toBottomOf="@id/ivMainPhoto"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChatList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxHeight="250dp"
                android:layout_marginTop="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/ivChat"
                app:layout_constraintStart_toStartOf="@id/ivMainPhoto"
                app:layout_constraintEnd_toEndOf="@id/ivMainPhoto"
                tools:itemCount="2"
                tools:listitem="@layout/item_comment" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <EditText
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:hint="댓글 입력하기"
        android:background="@drawable/shape_edittext_background"
        android:padding="8dp"
        android:textSize="7sp"
        android:textColor="#B1B1B1"
        android:minHeight="36dp"
        app:layout_goneMarginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/scrollArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivSend"/>

    <ImageView
        android:id="@+id/ivSend"
        android:layout_width="12dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text"
        app:layout_constraintBottom_toBottomOf="@id/text"/>

    <TextView
        android:id="@+id/mainText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="확인"
        android:background="@drawable/bg_label_pink"
        android:padding="15dp"
        android:textSize="12sp"
        android:textColor="#FE927F"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_goneMarginTop="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>