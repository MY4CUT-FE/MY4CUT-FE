<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_arrow_back_24"
        android:padding="12dp"
        app:tint="@color/gray_900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:text="마이포컷 계정으로 로그인"
        android:textColor="@color/gray_900"
        android:textSize="20sp"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="이메일 (아이디)"
        android:textColor="@color/gray_900"
        android:textSize="12sp"
        android:fontFamily="@font/suit_medium"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_edittext_rounded"
        android:hint="이메일 입력"
        android:paddingHorizontal="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/suit_regular"
        android:textColor="@color/gray_900"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_label_email"
        app:layout_constraintTop_toBottomOf="@id/tv_label_email" />

    <TextView
        android:id="@+id/tv_email_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="아이디가 일치하지 않습니다."
        android:textColor="#FF0000"
        android:textSize="11sp"
        android:fontFamily="@font/suit_regular"
        android:visibility="gone"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/et_email"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        tools:visibility="visible"/>
    <TextView
        android:id="@+id/tv_label_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="비밀번호"
        android:textColor="@color/gray_900"
        android:textSize="12sp"
        android:fontFamily="@font/suit_medium"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_email_error" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_edittext_rounded"
        android:hint="비밀번호 입력"
        android:paddingHorizontal="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/suit_regular"
        android:textColor="@color/gray_900"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/ic_visibility_off"
        android:drawableTint="@color/gray_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_label_pw"
        app:layout_constraintTop_toBottomOf="@id/tv_label_pw" />

    <TextView
        android:id="@+id/tv_pw_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="#FF0000"
        android:textSize="11sp"
        android:fontFamily="@font/suit_regular"
        android:visibility="gone"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/et_password"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        tools:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/suit_bold"
        android:stateListAnimator="@null"
        android:background="@drawable/selector_btn_next"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>