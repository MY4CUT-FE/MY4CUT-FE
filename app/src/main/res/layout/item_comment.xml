<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp">

    <ImageView
        android:id="@+id/ivCommentProfile"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_member"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCommentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="에블린"
        android:textColor="#1A1A1A"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ivCommentProfile"
        app:layout_constraintTop_toTopOf="@id/ivCommentProfile"
        app:layout_constraintBottom_toBottomOf="@id/ivCommentProfile" />

    <TextView
        android:id="@+id/tvCommentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20분 전"
        android:textColor="#595959"
        android:textSize="6sp"
        android:layout_marginStart="6dp"
        app:layout_constraintStart_toEndOf="@id/tvCommentName"
        app:layout_constraintTop_toTopOf="@id/tvCommentName"
        app:layout_constraintBottom_toBottomOf="@id/tvCommentName" />

    <TextView
        android:id="@+id/tvCommentDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textColor="#8F8F8F"
        android:textSize="6sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvCommentName"
        app:layout_constraintBottom_toBottomOf="@id/tvCommentName"/>

    <TextView
        android:id="@+id/tvCommentContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="올릴 때 2번째 가리고 ㄱㄱ"
        android:textColor="#1A1A1A"
        android:textSize="8sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/ivCommentProfile"
        app:layout_constraintStart_toStartOf="@id/ivCommentProfile"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>