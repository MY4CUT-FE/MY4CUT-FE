<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="360dp"
    android:padding="20dp"
    android:background="@drawable/bg_dialog_white_2">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 추가하기"
        android:textColor="#1A1A1A"
        android:textSize="16sp"
        android:fontFamily="@font/suit_semibold"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- 닫기 -->
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"/>

    <!-- 구분선 -->
    <View
        android:id="@+id/dividerTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <!-- 친구 코드 입력 -->
    <TextView
        android:id="@+id/tvInputLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구 코드 입력하기"
        android:textSize="12sp"
        android:textColor="#1A1A1A"
        android:fontFamily="@font/suit_regular"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/dividerTop"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etFriendCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_edittext_border"
        android:hint="코드 입력"
        android:padding="15dp"
        android:textSize="14sp"
        android:textColor="#1A1A1A"
        android:textColorHint="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@id/tvInputLabel"/>

    <!-- 내 코드 -->
    <TextView
        android:id="@+id/tvMyCodeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="내 코드 복사하기"
        android:textSize="12sp"
        android:textColor="#1A1A1A"
        android:fontFamily="@font/suit_regular"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/etFriendCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvMyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABCD12"
        android:textSize="14sp"
        android:textColor="#1A1A1A"
        android:fontFamily="@font/suit_bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvMyCodeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 검색 / 추가 결과 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvMyCode">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_profile_cat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvResultName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화운"
            android:textSize="14sp"
            android:textColor="#1A1A1A"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/ivProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 하단 버튼 -->
    <TextView
        android:id="@+id/btnAction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_label_pink"
        android:text="검색"
        android:textColor="#FE927F"
        android:textSize="12sp"
        android:fontFamily="@font/suit_bold"
        android:gravity="center"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>