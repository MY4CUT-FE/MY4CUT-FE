<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="9dp"
        android:layout_height="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="네컷 업로드"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/line_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="100dp">

            <TextView
                android:id="@+id/tv_date_capsule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2026.01.08"
                android:background="@drawable/bg_date_capsule"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textSize="12sp"
                android:textColor="#4D4D4D"
                android:fontFamily="@font/suit_medium"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="17dp"
                android:layout_height="16dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_date_capsule"
                app:layout_constraintBottom_toBottomOf="@id/tv_date_capsule"/>

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textSize="12sp"
                android:fontFamily="@font/suit_regular"
                android:textColor="#B3B3B3"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toStartOf="@id/btnComplete"
                app:layout_constraintTop_toTopOf="@id/tv_date_capsule"
                app:layout_constraintBottom_toBottomOf="@id/tv_date_capsule"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/btnComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="완료"
                android:textSize="12sp"
                android:fontFamily="@font/suit_regular"
                android:textColor="#FF7E67"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_date_capsule"
                app:layout_constraintBottom_toBottomOf="@id/tv_date_capsule"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/fl_photo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_date_capsule">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_photo_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_photo_container_border"
                    android:padding="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:background="@drawable/bg_dotted_border"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:id="@+id/iv_upload_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_upload_placeholder_icon"
                            app:layout_constraintBottom_toTopOf="@id/tv_upload_guide"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <TextView
                            android:id="@+id/tv_upload_guide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/suit_bold"
                            android:gravity="center"
                            android:text="오늘의 네컷을\n업로드 해주세요"
                            android:textColor="#1A1A1A"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/iv_upload_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/suit_medium"
                            android:gravity="center"
                            android:text="하루 최대 3장의 네컷을 등록하고\n일기는 1개만 작성할 수 있어요."
                            android:textColor="#888888"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_upload_guide" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vp_photo_slider"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:visibility="gone"
                    android:paddingHorizontal="40dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    tools:visibility="visible" />

            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_diary_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/fl_photo_container"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:id="@+id/et_diary"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_diary_input"
                    android:hint="오늘의 네컷을 기록해보세요."
                    android:inputType="textMultiLine"
                    android:textSize="14sp"
                    android:textColor="#1A1A1A"
                    android:padding="16dp"
                    android:gravity="top|start"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_mood_1"/>

                <TextView
                    android:id="@+id/tv_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/100"
                    android:textSize="8sp"
                    android:textColor="#888888"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="@id/et_diary"
                    app:layout_constraintBottom_toBottomOf="@id/et_diary"
                    app:layout_constraintEnd_toEndOf="@id/et_diary"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_mood_1"
                    android:layout_width="38dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:background="@drawable/bg_img_circle"
                    android:src="@drawable/img_mood_happy"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/et_diary"
                    app:layout_constraintTop_toTopOf="@id/et_diary"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>