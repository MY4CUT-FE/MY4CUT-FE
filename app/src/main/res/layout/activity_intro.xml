<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_intro_gradient"
    tools:context=".ui.intro.IntroActivity">

    <!-- 로고 텍스트 (상단) -->
    <TextView
        android:id="@+id/tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="MY4CUT"
        android:textColor="@color/coral_900"
        android:textSize="40sp"
        android:fontFamily="@font/hakgyoansim_ttwimteul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sub_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Scrap Your Memories"
        android:textColor="@color/coral_800"
        android:textSize="16sp"
        android:fontFamily="@font/suit_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_logo" />

    <!-- 중앙 일러스트 컨테이너 -->
    <FrameLayout
        android:id="@+id/fl_illustration_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/btn_login_my4cut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sub_logo"
        app:layout_constraintVertical_bias="0.48">

        <ImageView
            android:id="@+id/iv_intro_illustration_1"
            android:layout_width="114dp"
            android:layout_height="286dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/intro_illustration_1" />

        <ImageView
            android:id="@+id/iv_intro_illustration_2"
            android:layout_width="157dp"
            android:layout_height="332dp"
            android:layout_gravity="end|top"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/intro_illustration_2" />

    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_my4cut"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        android:text="마이포컷 계정으로 로그인"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/suit_bold"
        android:stateListAnimator="@null"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@color/coral_800"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@id/btn_login_kakao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 카카오톡 로그인 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_kakao"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="4dp"
        android:text="카카오톡으로 로그인"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/suit_bold"
        android:stateListAnimator="@null"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@color/coral_800"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@id/tv_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 회원가입 텍스트 -->
    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:padding="10dp"
        android:text="회원가입"
        android:textColor="@color/gray_700"
        android:textSize="14sp"
        android:fontFamily="@font/suit_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>