<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg_dialog_white_3">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앨범 생성"
        android:textSize="16sp"
        android:fontFamily="@font/suit_bold"
        android:textColor="#1A1A1A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/headerLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <TextView
        android:id="@+id/labelSpaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앨범 이름"
        android:textSize="12sp"
        android:fontFamily="@font/suit_regular"
        android:textColor="#1A1A1A"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/headerLine"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etSpaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_edittext_border"
        android:padding="15dp"
        android:hint="앨범 1"
        android:text="앨범 1"
        android:textSize="14sp"
        android:fontFamily="@font/suit_bold"
        android:textColor="#1A1A1A"
        app:layout_constraintTop_toBottomOf="@id/labelSpaceName" />

    <View
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@id/etSpaceName" />

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_label_pink"
        android:gravity="center"
        android:padding="15dp"
        android:text="확인"
        android:textColor="#FE927F"
        android:textSize="12sp"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>