<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- My Space Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMySpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:strokeWidth="0dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="#FFFFFF">

            <!-- My Space 제목 -->
            <TextView
                android:id="@+id/tvMySpaceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/suit_bold"
                android:text="My Space"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- + 추가 -->
            <TextView
                android:id="@+id/tvAddSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/suit_regular"
                android:text="+ 추가"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/tvMySpaceTitle"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutSpaceCircles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvMySpaceTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <!-- Orange background circle (perfect circle, not clipped) -->
                <ImageView
                    android:id="@+id/viewOrangeCircle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_rs_eclipse"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerInside"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintDimensionRatio="1:1" />

                <!-- Layer for space item circles -->
                <FrameLayout
                    android:id="@+id/layoutSpaceItems"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="35dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    app:layout_constraintTop_toTopOf="@id/viewOrangeCircle"
                    app:layout_constraintBottom_toBottomOf="@id/viewOrangeCircle"
                    app:layout_constraintStart_toStartOf="@id/viewOrangeCircle"
                    app:layout_constraintEnd_toEndOf="@id/viewOrangeCircle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>