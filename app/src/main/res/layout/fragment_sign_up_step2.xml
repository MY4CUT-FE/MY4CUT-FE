<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_arrow_back_24"
        android:padding="12dp"
        app:tint="@color/gray_900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_step_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_circle_coral"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back" />

    <TextView
        android:id="@+id/tv_step_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_circle_gray"
        android:textColor="#808080"
        android:gravity="center"
        android:text="2"
        android:textSize="12sp"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintStart_toEndOf="@id/tv_step_1"
        app:layout_constraintTop_toTopOf="@id/tv_step_1" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="로그인에 사용할 정보를 입력해주세요."
        android:textColor="@color/gray_900"
        android:textSize="20sp"
        android:fontFamily="@font/suit_bold"
        app:layout_constraintStart_toStartOf="@id/tv_step_1"
        app:layout_constraintTop_toBottomOf="@id/tv_step_1" />

    <TextView
        android:id="@+id/tv_label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="이메일 (아이디)"
        android:textColor="@color/gray_900"
        android:textSize="12sp"
        android:fontFamily="@font/suit_medium"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_edittext_rounded"
        android:hint="이메일 입력"
        android:paddingHorizontal="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/suit_regular"
        android:textColor="@color/gray_900"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toStartOf="@+id/btn_check_duplicate"
        app:layout_constraintStart_toStartOf="@id/tv_label_email"
        app:layout_constraintTop_toBottomOf="@id/tv_label_email" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_check_duplicate"
        android:layout_width="84dp"
        android:layout_height="52dp"
        android:layout_marginEnd="20dp"
        android:text="중복 확인"
        android:textColor="@color/gray_500"
        android:textSize="12sp"
        android:fontFamily="@font/suit_medium"
        android:stateListAnimator="@null"
        android:padding="0dp"
        android:minWidth="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        app:backgroundTint="@color/white"
        app:strokeColor="@color/gray_300"
        app:strokeWidth="1dp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_email" />

    <TextView
        android:id="@+id/tv_email_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="사용 가능한 아이디에요."
        android:textColor="@color/success_green"
        android:textSize="11sp"
        android:fontFamily="@font/suit_regular"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/btn_check_duplicate"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_label_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="비밀번호"
        android:textColor="@color/gray_900"
        android:textSize="12sp"
        android:fontFamily="@font/suit_medium"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_email_status" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_edittext_rounded"
        android:hint="비밀번호 입력"
        android:paddingHorizontal="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/suit_regular"
        android:textColor="@color/gray_900"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/ic_visibility_off"
        android:drawableTint="@color/gray_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_label_pw"
        app:layout_constraintTop_toBottomOf="@id/tv_label_pw" />

    <EditText
        android:id="@+id/et_password_check"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_edittext_rounded"
        android:hint="비밀번호 재입력"
        android:paddingHorizontal="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/suit_regular"
        android:textColor="@color/gray_900"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/ic_visibility_off"
        android:drawableTint="@color/gray_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_label_pw"
        app:layout_constraintTop_toBottomOf="@id/et_password" />

    <TextView
        android:id="@+id/tv_pw_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="#FF0000"
        android:textSize="11sp"
        android:fontFamily="@font/suit_regular"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/et_password_check"
        app:layout_constraintTop_toBottomOf="@id/et_password_check"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        tools:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/suit_bold"
        android:stateListAnimator="@null"
        android:background="@drawable/selector_btn_next"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>